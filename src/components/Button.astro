---
import type { HTMLAttributes } from "astro/types";

const button = {
    defaultClass: "button",
    variants: {
        theme: {
            theme1: "button--theme1",
            theme2: "button--theme2",
            theme3: "button--theme3",
        },
        size: {
            content: "button--content"
        },
    },
};

interface Props extends HTMLAttributes<"a"> {
    variant?: keyof typeof button.variants.theme;
    size?: keyof typeof button.variants.size;
    classBlock?: string;
}

const { variant = "theme1", size, classBlock,...attrs } = Astro.props;
---

<a class:list={[button.defaultClass, button.variants.theme[variant], size && button.variants.size[size] , classBlock ]} {...attrs}>
    <slot />
</a>
