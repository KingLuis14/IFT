---
import NavBar from './NavBar.astro';
import MenuData from "../data/Menu.json";


interface imagenesBanner {
    base64: string;
    imagen: string;
}

interface Props {
    titulo : string;
    description: string;
    textButton: string;
    imagenesBanner : imagenesBanner;
    
}

const {titulo, description, textButton, imagenesBanner} = Astro.props;

const {base64, imagen} = imagenesBanner;
---

<div 
    class="HeroImgContainer"
    style={`--base64: url(${base64});
            --small-lcpi: url(img/${imagen}-small-lcpi.avif);
            --small: url(img/${imagen}.avif);
            --large-lcpi: url(img/${imagen}-large-lcpi.avif);
            --large: url(img/${imagen}.avif);`
            } 
    >
    <NavBar ArrayItems={MenuData}/>
    <article class="contenido">
        <div class="wrapper" style="gap: 1.5rem;" >
            <h1 class="superTitulo">{ titulo }</h1>
            <p>{description}
            </p>
            <a href="/contacto" class="contenido__boton" >{ textButton }</a>
        </div>
    </article>
</div>

<style lang="scss">

    .HeroImgContainer {
        --Ibase64 : var(--base64);
        --lcpi : var(--small-lcpi);
        --original : var(--small);
        height: 100vmin;
        min-height: 85svh; 
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        background-image: var(--original), var(--lcpi), var(--Ibase64) ;

        @media (min-width: 640px) {
            --lcpi : var(--large-lcpi);
            --original : var(--large);
        }
        
    }

    .contenido {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100%;
        text-align: center;
        color: white;
        background-color: #100077c3;

        &__boton{
            color: rgb(255, 255, 255);
            justify-self: center;
            padding: .5rem 1rem;
            border-radius: .4rem;
            background-color: var(--color-Primary500);
            font-weight: 700;

            &:hover{
                background-color: var(--color-Primary600);
            }
        }
    }

    p{
        text-wrap: balance;
        @media (width > 768px) {
            white-space: pre-line;
        }
    }
    
</style>