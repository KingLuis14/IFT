---
interface Props {
    styleSplit? : string;
}

const { styleSplit, ...rest} = Astro.props;
---

<article class=`Split-Container ${styleSplit}` {...rest}>
    <slot name="CONTENIDO" />
    
    <slot name="imagen" />
</article>

<style lang="scss">
    .Split-Container {
        display: grid;
        grid-template-columns: 1fr;
        width: min(100%, 850px);
        margin-inline: auto;
        gap: 2rem;
        @media (width > 768px) {
            grid-template-columns: 1fr 1fr;
        }
    }

    .prueba{
        border: 5px solid red;
    }


    .contenido {
        min-height: 100%;
        align-content: center;
        display: grid;
        gap: 1rem;
    }

    .order {
        order: 0;
        @media (width > 768px) {
            order: 1;
        }
    }
    .order2 {
        order: 1;
        background-color: crimson;
    }
</style>
