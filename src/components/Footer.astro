---
import FooterList from "./FooterList.astro";
import Cursos from "../data/GetDataCursos";
import { Icon } from "astro-icon/components";
---

<footer>
    <div class="wrapper">
        <div class="Footer-Container">
            <FooterList titulo="Cursos">
                <ul class="ListaCursos">
                    {
                        Cursos.map(({ titulo, id }) => {
                            return (
                                <li>
                                    <a
                                        href={`/${id}`}
                                        aria-label={`Ir a la pagina del curso de ${titulo}`}
                                        class="small"
                                        style="color: rgb(210, 210, 210);"
                                    >
                                        {titulo}
                                    </a>
                                </li>
                            );
                        })
                    }
                </ul>
            </FooterList>
            <FooterList titulo="Empresa">
                <div style="margin-bottom: .3rem;">
                    <h4>Direccion:</h4>
                    <p class="small">Hipólito Unanue N° 899 Lima - Perú</p>
                </div>
                <div style="margin-bottom: .3rem;">
                    <h4>Correo:</h4>
                    <p class="small">informes@ift.pe</p>
                </div>
                <div style="margin-bottom: .3rem;">
                    <h4>Contacto:</h4>
                    <p class="small">980816746</p>
                </div>
            </FooterList>
            <FooterList titulo="Servicios">
                <p class="small">Educacion Online</p>
                <p class="small">Creacion de Paginas Web</p>
            </FooterList>
            <FooterList titulo="Redes Sociales" styleContent="Iconos-Container">
                <a
                    class="RedesSociales-Icon"
                    href="https://www.facebook.com/people/Instituto-de-Formaci%C3%B3n-Tecnol%C3%B3gica-IFT/61555145250465/"
                    aria-label=`Ir a la nuestro facebook`
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <Icon name="facebook" size={30} />
                </a>
                <a
                    class="RedesSociales-Icon"
                    href="https://www.youtube.com/channel/UCesc5xJfVHuvT6k401bGlcg"
                    aria-label=`Ir a la nuestro canal de Youtube`
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <Icon name="Youtube" size={30} />
                </a>
                <a
                    class="RedesSociales-Icon"
                    href="https://www.instagram.com/institutoift/?igsh=NTc4MTIwNjQ2YQ%3D%3D"
                    aria-label=`Ir a la nuestro Instagram`
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <Icon name="Instagram" size={30} />
                </a>
                <a
                    class="RedesSociales-Icon"
                    href="https://www.instagram.com/institutoift/?igsh=NTc4MTIwNjQ2YQ%3D%3D"
                    aria-label=`Ir a la nuestro Instagram`
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <Icon name="Tiktok" size={30} />
                </a>
            </FooterList>
        </div>
        <p>©2024 IFT. Todos los derechos reservados.</p>
    </div>
</footer>

<style lang="scss">
    footer {
        padding-block: 2rem;

        background-color: #282829;
        color: white;
    }

    .Footer-Container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        column-gap: 1rem;
        row-gap: 2rem;

        @media (width > 768px) {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    .ListaCursos {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    .wrapper {
        gap: 2rem;
        > p {
            // padding-block: .5rem;
            text-align: center;
            color: rgb(210, 210, 210);
        }
    }

    .Iconos-Container {
        flex-direction: row;
        gap: 1rem;
        > a {
            color: rgb(210, 210, 210);
        }
    }

    .RedesSociales-Icon{

        transition: transform .2s;

        &:hover{
            transform: scale(1.15);
        }
    }
</style>
