---



interface imagenesBanner {
    base64: string;
    smallLcpi: string;
    small : string;
    largeLcpi: string;
    large: string;
}

interface Props {
    titulo : string;
    description: string;
    textButton: string;
    imagenesBanner : imagenesBanner;
    
}

const {titulo, description, textButton, imagenesBanner} = Astro.props;

const {base64, large, largeLcpi, small, smallLcpi} = imagenesBanner;
---

<div 
    class="HeroImgContainer"
    style={`--base64: url(${base64});
            --small-lcpi: url(${smallLcpi});
            --small: url(${small});
            --large-lcpi: url(${largeLcpi});
            --large: url(${large});`} 
    >
    
    <article class="contenido">
        <div class="wrapper" style="gap: 1.5rem;" >
            <h1 class="superTitulo">{ titulo }</h1>
            <p>{description}
            </p>
            <a href="/contacto" class="contenido__boton" >{ textButton }</a>
        </div>
    </article>
</div>

<style lang="scss">

    .HeroImgContainer {
        --Ibase64 : var(--base64);
        --lcpi : var(--small-lcpi);
        --original : var(--small);
        height: calc(100vmin - var(--header-heigth));
        min-height: 75svh; 
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        background-image: var(--original), var(--lcpi), var(--Ibase64) ;
        

        @media (min-width: 640px) {
            --lcpi : var(--large-lcpi);
            --original : var(--large);
        }
        
    }

    .contenido {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100%;
        text-align: center;
        color: white;
        
        background-color: #100077c3;

        &__boton{
            color: rgb(255, 255, 255);
            -ms-grid-column-align: center;
            justify-self: center;
            padding: .5rem 1rem;
            border-radius: .4rem;
            background-color: var(--color-Primary500);
            font-weight: 700;

            &:hover{
                background-color: var(--color-Primary600);
            }
        }
    }

    p{
        @media (width > 768px) {
            white-space: pre-line;
        }
    }
    
</style>