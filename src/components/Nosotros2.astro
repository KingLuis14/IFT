---
import Button from "./Button.astro";
import PictureImg from "@/components/atoms/PictureImg.astro";
import SectionPage from "./SectionPage.astro";
import Typografic from "./Typografic.astro";
import Wrapper from "./Wrapper.astro";

const AboutNosotros = {
    imgName: "about",
    alt: "imagen de about 1",
    type: ["avif", "webp"],
    get imagen(): { url: string, type: string }[] {
        return this.type.map((ty: string) => {
            return { url: `${this.imgName}.${ty}`, type: ty };
        });
    }
};
