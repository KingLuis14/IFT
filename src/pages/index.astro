---
import Beneficios from "../components/Beneficios.astro";
import Cursos from "../components/Cursos.astro";
import Layout from "../layout/Layout.astro";
import BannerData from "../data/BannerData";
import AboutUs from "../components/AboutUs.astro";
import Cta from "../components/Cta.astro";
import Button from "@/components/Button.astro";
import Typografic from "@/components/Typografic.astro";
import Banner from "@/components/moleculs/Banner.astro";
import FormBanner from "@/components/organisms/FormBanner.astro";
const { description, titulo, imagenesBanner } = BannerData.home;
const { imagen } = imagenesBanner;
import SplitLayout from "@/components/moleculs/SplitLayout.astro";

---

<Layout
    titulo="inicio"
    descripction="Instituto de formacion tencologica tu mejor opción en enseñanza online"
>
    <link
        slot="preload"
        fetchpriority="high"
        rel="preload"
        as="image"
        href=`/img/${imagen}-small-lcpi.avif`
        media="(max-width: 640px)"
        type="image/webp"
    />
    <link
        slot="preload"
        fetchpriority="high"
        rel="preload"
        as="image"
        href=`/img/${imagen}-large-lcpi.avif`
        media="(min-width: 641px)"
        type="image/webp"
    />
    <Banner {imagenesBanner}>
        <SplitLayout variant="banner" colors="white" style="position: relative; padding-block: 2.5rem;" align="center" classUtilities="@md:text-left" >
            <article class="banner__contenido textFlow">
                <Typografic as="h1" size="superTitle" weigth="700">{titulo}</Typografic>
                <Typografic as="p">{description}</Typografic>
                <Button
                    href="https://api.whatsapp.com/send/?phone=51980816746&text=%C2%A1Hola%21+%EF%BF%BD+Mas+informaci%C3%B3n&type=phone_number&app_absent=0"
                    target="_blank"
                    variant="theme2">Mas Información</Button
                >
            </article>
            <FormBanner />
        </SplitLayout>
    </Banner>
    <Cursos />
    <Beneficios />
    <AboutUs />
    <Cta slot="CTA" />
</Layout>

