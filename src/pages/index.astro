---
import Beneficios from "../components/Beneficios.astro";
import Cursos from "../components/Cursos.astro";
import Layout from "../layout/Layout.astro";
import BannerData from "../data/BannerData";
import AboutUs from "../components/AboutUs.astro";
import Cta from "../components/Cta.astro";
import HeroImg from "../components/HeroImg.astro";
import FormularioBanner from "../components/Formulario/FormularioBanner.astro";
const {description, titulo, textButton} = BannerData.home;
const {imagen } = BannerData.home.imagenesBanner;
---

<Layout titulo="inicio" descripction="Instituto de formacion tencologica tu mejor opción en enseñanza online">
    <link
        slot="preload"
        fetchpriority="high"
        rel="preload"
        as="image"
        href=`/img/${imagen}-small-lcpi.avif`
        media="(max-width: 640px)"
        type="image/webp"
    />
    <link
        slot="preload"
        fetchpriority="high"
        rel="preload"
        as="image"
        href=`/img/${imagen}-large-lcpi.avif`
        media="(min-width: 641px)"
        type="image/webp"
    />
    <HeroImg imagenesBanner={BannerData.home.imagenesBanner} slot="Banner">
        <div slot="Contenido" class="wrapper container">
            <div class="contenido">
                <h1 class="superTitulo">{titulo}</h1>
                <p>{description}</p>
                <a href="/contacto" 
                    class="contenido__boton" 
                    aria-label="Inscribete en uno de nuestros cursos y se todo un profesional"
                    >
                    {textButton}
                </a>
            </div>
            <FormularioBanner />
        </div>
    </HeroImg>
    <Cursos />
    <Beneficios />
    <AboutUs />
    <Cta slot="CTA"/>
</Layout>

<style lang="scss">
    .container {
        position: relative;
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr;
        height: 100%;
        text-align: center;
        color: white;
        padding-block: 2rem;
        // background-color: crimson;

        @media (width > 640px) {
            grid-template-columns: 6fr 4fr;
        }
    }

    .contenido {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        justify-content: center;
        align-items: center;

        @media (width > 640px) {
            align-items: start;
        }

        & > .superTitulo {
            text-align: center;
            @media (width > 640px) {
                text-align: start;
            }
        }

        &__boton {
            color: rgb(255, 255, 255);
            justify-self: center;
            padding: 0.5rem 1rem;
            border-radius: 0.4rem;
            background-color: var(--color-Primary500);
            font-weight: 700;

            &:hover {
                background-color: var(--color-Primary600);
            }
        }

        > p {
            text-wrap: balance;
            text-align: center;
            color: #eeeeee;
            @media (width > 640px) {
                text-align: start;
            }
        }
    }
</style>