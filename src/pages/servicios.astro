---
import Layout from "../layout/Layout.astro";
import BannerData from "../data/BannerData";
import Servicios2 from "../sections/servicios.astro";
import BannerNew from "../components/BannerNew.astro";
const { description, titulo, textButton, imagenesBanner } = BannerData.servicios;
const { imagen } = imagenesBanner;
---

<Layout
    titulo="servicios"
    descripction="brindamos clases virtuales personalizadas y creamos paginas web"
>
    <link
        slot="preload"
        fetchpriority="high"
        rel="preload"
        as="image"
        href=`/img/${imagen}-small-lcpi.avif`
        media="(max-width: 640px)"
        type="image/webp"
    />
    <link
        slot="preload"
        fetchpriority="high"
        rel="preload"
        as="image"
        href=`/img/${imagen}-large-lcpi.avif`
        media="(min-width: 641px)"
        type="image/webp"
    />
    <BannerNew
        titulo={titulo}
        descripcion={description}
        textoBoton={textButton}
        imagenesBanner={imagenesBanner}
    />
    <section>
        <div class="wrapper">
            <h2 class="titleSection">Creaci√≥n de Paginas Web</h2>
        </div>
    </section>
    <Servicios2 />
</Layout>


