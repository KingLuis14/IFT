---
import Layout from "../layout/Layout.astro";
import BannerData from "../data/BannerData";
import Servicios2 from "../sections/servicios.astro";
import BannerNew from "../components/BannerNew.astro";
import SectionPage from "@/components/SectionPage.astro";
import Wrapper from "@/components/Wrapper.astro";
import { Icon } from "astro-icon/components";
import Typografic from "@/components/Typografic.astro";
const { description, titulo, textButton, imagenesBanner } = BannerData.servicios;
const { imagen } = imagenesBanner;
---

<Layout
    titulo="servicios"
    descripction="brindamos clases virtuales personalizadas y creamos paginas web"
>
    <link
        slot="preload"
        fetchpriority="high"
        rel="preload"
        as="image"
        href=`/img/${imagen}-small-lcpi.avif`
        media="(max-width: 640px)"
        type="image/webp"
    />
    <link
        slot="preload"
        fetchpriority="high"
        rel="preload"
        as="image"
        href=`/img/${imagen}-large-lcpi.avif`
        media="(min-width: 641px)"
        type="image/webp"
    />
    <BannerNew
        titulo={titulo}
        descripcion={description}
        textoBoton={textButton}
        imagenesBanner={imagenesBanner}
    />
    <SectionPage style="padding-bottom: 0;">
        <Wrapper>
            <Typografic as="h2" variant="colorBlue"size="title1"  aling="center" weigth="600">Creaci√≥n de Paginas Web</Typografic>
        </Wrapper>
    </SectionPage>
    <Servicios2 />
</Layout>



