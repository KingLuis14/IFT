---
import Layout from '@/layout/Layout.astro';
import AboutUs from '@/sections/AboutUs.Nosotros.astro';
import Navbar from '@/sections/Navbar.astro';

import { wordPressFecth } from '@/utils/WordPressFetch';

const DataWp = await wordPressFecth({
   query: `
   
   query NewQuery {
  cursosDatas {
    nodes {
      slug
      cursosMalla {
        id
        descripcion
        imageBanner {
          mediaItemUrl
        }
        image {
          mediaDetails {
            height
            width
          }
          mediaItemUrl
        }
        modulos {
          idModulo
          semanas {
            temas {
              data
            }
          }
        }
        
      }
    }
  }
}

   `,
});
---

<Layout
   titulo="nosotros"
   descripction="IFT es una empresa especializada en capacitaciones tecnológicas. Con nuestro RUC 20611910224, ofrecemos programas de formación de vanguardia en diversas áreas de la tecnología, desde desarrollo de software hasta ciberseguridad."
   DataWp={DataWp}>
   <Navbar slot="Navbar" position="sticky" />
   <AboutUs />
</Layout>
