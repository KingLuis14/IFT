---
import Layout from "../layout/Layout.astro";
import Cta from "../components/Cta.astro";
import Nosotros2 from "../components/Nosotros2.astro";
import HeroImg from "../components/HeroImg.astro";
import FormularioBanner from "../components/Formulario/FormularioBanner.astro";
import BannerData from "../data/BannerData";
import BannerNew from "../components/BannerNew.astro";
const { description, titulo, textButton, imagenesBanner } = BannerData.nosotros;
const { imagen } = imagenesBanner;
---

<Layout
    titulo="Nosotros"
    descripction="Acerca del Instituto de formacion tencologica"
>
    <link
        slot="preload"
        fetchpriority="high"
        rel="preload"
        as="image"
        href=`/img/${imagen}-small-lcpi.avif`
        media="(max-width: 640px)"
        type="image/webp"
    />
    <link
        slot="preload"
        fetchpriority="high"
        rel="preload"
        as="image"
        href=`/img/${imagen}-large-lcpi.avif`
        media="(min-width: 641px)"
        type="image/webp"
    />
    <BannerNew
        titulo={titulo}
        descripcion={description}
        textoBoton={textButton}
        imagenesBanner={imagenesBanner}
        columnas={2}
    >
        <FormularioBanner slot="Columna2" />
    </BannerNew>
    <Nosotros2 />
    <Cta slot="CTA" />
</Layout>

