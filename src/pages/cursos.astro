---
import Layout from '@/layout/Layout.astro';
import Cta from '@/sections/Cta.astro';
import BannerData from '@/data/BannerData';
import InfoCursos from '@/sections/InfoCursos.astro';
import Typografic from '@/components/Typografic.astro';
import Button from '@/components/Button.astro';
import Banner from '@/components/moleculs/Banner.astro';
import FormBanner from '@/components/organisms/FormBanner.astro';
const { description, titulo, imagenesBanner } = BannerData.cursos;
const { imagen } = imagenesBanner;
import SplitLayout from '@/components/moleculs/SplitLayout.astro';
import { PLACEHOLDER_FORMATS } from '@/constants';
---

<Layout titulo="cursos" descripction="Ofrecemos los mejores cursos virtuales mas demandados en el area tecnologica">
  <link slot="preload" fetchpriority="high" rel="preload" as="image" href=`/img/${imagen}-banner-small-lcpi.${PLACEHOLDER_FORMATS}` media="(max-width: 640px)" type="image/webp" />
  <link slot="preload" fetchpriority="high" rel="preload" as="image" href=`/img/${imagen}-banner-large-lcpi.${PLACEHOLDER_FORMATS}` media="(min-width: 641px)" type="image/webp" />
  <Banner {...imagenesBanner}>
    <SplitLayout variant="banner" colors="white" style="position: relative; padding-block: 2.5rem;" align="center" classUtilities="@md:text-left">
      <article class="banner__contenido textFlow">
        <Typografic as="h1" size="superTitle" weigth="700">{titulo}</Typografic>
        <Typografic as="p">{description}</Typografic>
        <Button href="https://api.whatsapp.com/send/?phone=51980816746&text=%C2%A1Hola%21+%EF%BF%BD+Mas+informaci%C3%B3n&type=phone_number&app_absent=0" target="_blank" variant="theme2">Mas Informaci√≥n</Button>
      </article>
      <FormBanner />
    </SplitLayout>
  </Banner>
  <InfoCursos />
  <Cta slot="CTA" />
</Layout>
