---
import Layout from "../layout/Layout.astro";
import Cta from "../components/Cta.astro";
import HeroImg from "../components/HeroImg.astro";
import FormularioBanner from "../components/Formulario/FormularioBanner.astro";
import BannerData from "../data/BannerData";
import InfoCursos from "../sections/InfoCursos.astro";
import BannerNew from "../components/BannerNew.astro";
const { description, titulo, textButton, imagenesBanner } = BannerData.cursos;
const { imagen } = imagenesBanner;
---

<Layout
    titulo="cursos"
    descripction="Ofrecemos los mejores cursos virtuales mas demandados en el area tecnologica"
>
    <link
        slot="preload"
        fetchpriority="high"
        rel="preload"
        as="image"
        href=`/img/${imagen}-small-lcpi.avif`
        media="(max-width: 640px)"
        type="image/webp"
    />
    <link
        slot="preload"
        fetchpriority="high"
        rel="preload"
        as="image"
        href=`/img/${imagen}-large-lcpi.avif`
        media="(min-width: 641px)"
        type="image/webp"
    />
    <BannerNew
        titulo={titulo}
        descripcion={description}
        textoBoton={textButton}
        imagenesBanner={imagenesBanner}
        columnas={2}
    >
        <FormularioBanner slot="Columna2" />
    </BannerNew>
    <InfoCursos />
    <Cta slot="CTA" />
</Layout>

<style lang="scss">
    .container {
        position: relative;
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr;
        height: 100%;
        text-align: center;
        color: white;
        padding-block: 2rem;

        @media (width > 700px) {
            grid-template-columns: 5fr 4fr;
        }
    }

    .contenido {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        justify-content: center;
        align-items: center;

        @media (width > 700px) {
            align-items: start;
        }

        & > .superTitulo {
            text-align: center;
            @media (width > 700px) {
                text-align: start;
            }
        }

        &__boton {
            color: rgb(255, 255, 255);
            justify-self: center;
            padding: 0.5rem 1rem;
            border-radius: 0.4rem;
            background-color: var(--color-Primary500);
            font-weight: 700;
            margin-top: 0.5rem;

            &:hover {
                background-color: var(--color-Primary600);
            }
        }

        > p {
            text-align: center;
            color: #ececec;
            @media (width > 700px) {
                text-align: start;
            }
        }
    }
</style>
