---
import type { Node } from '@/interface/Cursos';

interface Props {
   cursos: Node[];
}

const { cursos } = Astro.props;
---

<section class="section-page">
   <div class="wrapper container section-page-flow">
      <h2 class="font-bebas-neue fs-super-title-2">Mira nuestros cursos</h2>
      <p>
         <ul class="container__list">
            {
               cursos.map(({ slug, cursosMalla }) => (
                  <li class="container__item">
                     <a href={`/cursos/${slug}`}>
                        <img src={cursosMalla.image.mediaItemUrl} alt={cursosMalla.id} />
                     </a>
                  </li>
               ))
            }
         </ul>
      </p>
   </div>

   <style lang="scss">
      .container {
         &__list {
            display: flex;
            gap: 1rem;
            overflow-x: scroll;
            padding-block-end: 2rem;
           
            &::-webkit-scrollbar {
               height: 8px; 
            }

            &::-webkit-scrollbar-thumb {
               background-color: #c9c9c9; 
               border-radius: 10px; 
            }

            &::-webkit-scrollbar-track {
               background: transparent; 
            }
         }

         &__item {
            flex-shrink: 0;
            height: 60vmin;
            border-radius: 1rem;
            overflow: hidden;

            a,
            img {
               height: 100%;
            }

            img {
               width: auto;
            }
         }
      }
   </style>
</section>
