---
import { Icon } from "astro-icon/components";
---

<footer class="section-page bg-color-black-900 color-white-000">
  <div class="wrapper container">
    <nav class="container__navigation">
      <div  class="container__logo">
        <a href="/">
          <img src="/img/logo.png" alt="logo del intituto ift"   >
        </a>
        
        <!-- <p>Balanzas del Oriente</p> -->
      </div>

      <div class="container__groupNav">
        <h3>Navegación</h3>
        <ul class="container__list">
          <li><a href="#">Inicio</a></li>
          <li><a href="#">Productos</a></li>
          <li><a href="#">Nosotros</a></li>
          <li><a href="#">Contacto</a></li>
        </ul>
      </div>

     

      <div class="container__groupNav">
        <h3>Empresa</h3>
        <ul class="container__list">
          <li>tucorreo@gmail.com</li>
          <li>
            <a href="#">Jr Loreto N° 145</a>
          </li>
          <li><a href="#">980784568</a></li>
        </ul>
      </div>
    </nav>
    <div class="container__copy">
      <div>
        <small>©2024 IFT</small><br/>
        <small>Todos los derechos reservados</small>
      </div>
      <aside>
        <a href="#">
          <Icon name="facebook" class="color-blue-300" size={25} />
        </a>
        <a href="#">
          <Icon name="Instagram" class="color-blue-300" size={25} />
        </a>
        <a href="#">
          <Icon name="Tiktok" class="color-blue-300" size={25} />
        </a>
        <a href="#">
          <Icon name="Youtube" class="color-blue-300" size={25} />
        </a>
      </aside>
    </div>
  </div>
</footer>

<style lang="scss">
  .container {
    &__navigation {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      padding-bottom: 4rem;
      gap: 2rem 1rem;

      > :first-child {
        grid-column: span 2;
       
      }

      @media (width >= 768px) {
        grid-template-columns: min(35%, 500px) repeat(3, minmax(0, 1fr));
      }
    }

    &__logo {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;

      > a, img {
        width: 8rem;
      }
    }

    &__copy {
      padding-top: 2rem;
      border-top: 2px var(--white-000) solid;
      display: flex;
      justify-content: space-between;
      align-items: center;
      // background-color: cadetblue;

      > aside {
        display: flex;
        gap: 0.7rem;
      }
    }

    &__groupNav {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;

      > h3 {
        font-weight: 600;
      }
    }

    &__list {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      color: var(--white-100);
    }
  }
</style>
