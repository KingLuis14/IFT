<style lang="scss">
   .container {
      display: grid;
      grid-template-columns: minmax(0, 1fr);
      gap: 1.5rem;
      // color: white;

      @media (width >= 768px) {
         grid-template-columns: repeat(2, minmax(0, 1fr));
      }

      &__title {
         font-size: clamp(2.861rem, 2.6975rem + 0.8174vw, 3.4332rem);
      }

      &__content {
         // background-color: crimson;
         align-self: center;
         display: flex;
         flex-direction: column;
         gap: 0.5rem;
         order: 1;
      }

      &__list {
         margin-top: 1rem;
         display: flex;
         flex-direction: column;
         gap: 0.5rem;

         .listIcon {
            // background-color: skyblue;
            display: flex;
            // align-items: center;
            gap: 0.5rem;

            > svg {
               flex-shrink: 0;
               // margin-top: .2rem;
            }
         }
      }

      &__imgWrapper {
         border-radius: 0.5rem;
         overflow: hidden;
      }

      &__img {
         aspect-ratio: 16/9;
         min-height: 100%;
      }
   }
   .section {
      color: rgb(0, 0, 0);
      background-color: var(--blue-100);

      &.invert {
         background-color: var(--white-000);
         // color: white;

         @media (width >= 768px) {
            .container__content {
               order: 0;
            }
         }
      }
   }
</style>
