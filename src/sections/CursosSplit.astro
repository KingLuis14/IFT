---
import type { CursosDatas } from '@/interface/Cursos';
import { Icon } from 'astro-icon/components';

interface Props extends CursosDatas {}

const { nodes } = Astro.props;
---

{
   nodes.map(({ slug, cursosMalla }, index) => (
      <section class:list={['section section-page', { invert: index % 2 === 1 }]}>
         <div class="wrapper container">
            <div class="container__content loading-top">
               <small class="font-bebas-neue fs-normal">Curso</small>
               <h2 class="container__title font-bebas-neue">{cursosMalla.id}</h2>
               <p> {cursosMalla.descripcion} </p>
               <ul class="container__list">
                  <li class="listIcon">
                     <Icon name="CheckIcon" size={22} />
                     <span>Virtual y Asincrono</span>
                  </li>
                  <li class="listIcon">
                     <Icon name="CheckIcon" size={22} />
                     <span>Certificaci√≥n al Finalizar</span>
                  </li>
                  <li class="listIcon">
                     <Icon name="CheckIcon" size={22} />
                     <span>Plataforma Virtual</span>
                  </li>
               </ul>
               <a 
               class="button button--primary button--content"
               style="margin-top: 1rem;"
                href={`/cursos/${slug}/#malla-curricular`}
                >Ver Malla</a>
            </div>
            <div class="container__imgWrapper loading-top">
               <img
                  class="container__img"
                  src={cursosMalla.image.mediaItemUrl}
                  alt={cursosMalla.id}
                  style={` aspect-ratio : ${cursosMalla.image.mediaDetails.width} /  ${cursosMalla.image.mediaDetails.height} `}
               />
            </div>
            
         </div>
      </section>
   ))
}

